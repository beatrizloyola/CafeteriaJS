<html>
    <head>
        <title>Gerenciamento</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="UTF-8">
        <link href="./css/FolhaDeEstilo.css" rel="stylesheet">
    </head>
    <body id="gerenciar">
        <div #topo style="text-align: center;">
            <img src="./media/Demogorgo Boca Aberta.png" id="demogorgo"><br>
        </div>
        <div>
            <h2 style="margin-top: 20px;">Opções de Gerenciamento</h2>
            <a href="/cadastrar" class="btn btn-primary mesmo-tamanho" role="button" id="botaoEnviar">Cadastrar</a>
            <br><br><br>
            <table class="table table-dark">
                <thead>
                  <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Preço</th>
                    <th scope="col">ID</th>
                    <th scope="col">Caminho da Imagem</th>
                    <th scope="col">Ações</th>
                  </tr>
                </thead>
            <tbody>
            <% produtos.forEach(function(prod){ %>
                <tr class="align-middle">
                  <td><%= prod.nome %></td>
                  <td><%= prod.preco %></td>
                  <td><%= prod.id %></td>
                  <td><%= prod.img %></td>
                  <td><a href="/deletar/<%=prod.id%>">Excluir</a> | <a href="/editar/<%=prod.id%>">Editar</a></td>
            <% }) %>
            </tbody>
            </table>
        </div>
        <div class="container">
            <br><a href="/" id="linkInicio">Voltar para a página inicial</a>
        </div>
    </body>
</html>